{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "lib": ["es2015"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "public", "router", "service", "index.ts"],
  "exclude": ["dist", "node_modules"]
}
